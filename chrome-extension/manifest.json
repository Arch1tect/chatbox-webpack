{
  "name": "Chat Anywhere",
  "short_name": "Same Page",
  "description": "Leave comments or live chat on any web page!",
  "version": "2.0.2",
  "permissions": ["activeTab", "storage", "unlimitedStorage"],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["chatbox-only/content.js","chatbox-only/danmu.js"],
    "css": ["chatbox-only/content.css"]
  }],
  "icons": { 
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon.png" 
  },
  "browser_action": {
      "default_title": "Chat Anywhere",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "web_accessible_resources": ["chatbox-only/chatbox-frame.html", "chatbox-only/stickers/*"]

}
