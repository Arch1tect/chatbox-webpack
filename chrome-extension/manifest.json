{


  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "2.7.5",
  "permissions": ["activeTab", "storage", "unlimitedStorage"],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["chatbox-only/content.js","chatbox-only/danmu.js"],
    "css": ["chatbox-only/content.css"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { 
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon.png" 
  },
  "browser_action": {
      "default_title": "Same Page",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "web_accessible_resources": ["chatbox-only/chatbox-frame.html", "chatbox-only/stickers/*"]

}
